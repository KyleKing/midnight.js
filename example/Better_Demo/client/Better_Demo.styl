//
//
// Create some Nice Background Sections
//
//
Fill-Image(height, url, style)
	background-image url(url)
	height height
	width 100%
	background-size style
	background-repeat no-repeat
	background-position center

// Variables
SectHeight = 500px
link1 = '/imgs/BigImage.jpg'
// 'http://www.wallpapersbyte.com/wp-content/uploads/2015/06/Nature-Night-Sky-Stars-Blurred-Light-Show-Mountains-WallpapersByte-com-3840x2400.jpg'
link2 = '/imgs/tree.jpg'
// 'https://wallpaperscraft.com/image/night_sky_stars_tree_86210_1920x1080.jpg'
link3 = '/imgs/moon.jpg'
// 'https://wallpaperscraft.com/image/full_moon_night_sky_ice_constructions_47255_3840x1200.jpg'
link4 = '/imgs/milkyway.jpg'
// 'http://wallpaperbeta.com/wallpaper_3840x2160/sky_night_star_milky_way_landscapes_ultra_3840x2160_hd-wallpaper-413396.jpg'

section.white
	Fill-Image(SectHeight, link1, cover)
	background-color: #151D28
section.dkblue
	Fill-Image(SectHeight, link2, cover)
	background-color: #15212A
section.purple
	Fill-Image(SectHeight, link3, cover)
	background-color: #172B3F
section.ltblue
	Fill-Image(SectHeight, link4, cover)
	background-color: #193E5A
section.default
	Fill-Image(SectHeight, link4, cover)
	background-color: #193E5A
section.yellow
	Fill-Image(SectHeight, link2, cover)
	background-color: #193E5A
section.red
	background-color black
	height SectHeight
